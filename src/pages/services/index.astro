---
import Layout from '../../layouts/Layout.astro';

const services = [
  {
    title: 'Nettoyage de canap√©s',
    href: '/services/nettoyage-canapes/',
  },
  {
    title: 'Nettoyage de tapis',
    href: '/services/nettoyage-tapis/',
  },
];
---

<Layout title="Nos services - Alpha Cleaning" lang="fr">
  <h1 class="text-4xl font-bold mb-8">Nos services</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      services.map(({ title, href }) => (
        <a
          href={href}
          class="p-6 border rounded-lg hover:shadow-lg transition-shadow"
        >
          <h2 class="text-2xl font-semibold mb-2">{title}</h2>
          <span class="text-blue-600 hover:text-blue-800">En savoir plus &rarr;</span>
        </a>
      ))
    }
  </div>
</Layout> 