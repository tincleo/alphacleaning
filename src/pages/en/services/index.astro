---
import Layout from '../../../layouts/Layout.astro';

const services = [
  {
    title: 'Couch Cleaning',
    href: '/en/services/couch-cleaning/',
  },
  {
    title: 'Carpet Cleaning',
    href: '/en/services/carpet-cleaning/',
  },
];
---

<Layout title="Our Services - Alpha Cleaning" lang="en">
  <h1 class="text-4xl font-bold mb-8">Our Services</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      services.map(({ title, href }) => (
        <a
          href={href}
          class="p-6 border rounded-lg hover:shadow-lg transition-shadow"
        >
          <h2 class="text-2xl font-semibold mb-2">{title}</h2>
          <span class="text-blue-600 hover:text-blue-800">Learn more &rarr;</span>
        </a>
      ))
    }
  </div>
</Layout> 